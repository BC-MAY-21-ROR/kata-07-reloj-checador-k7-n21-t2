<nav class="home-nav">
  <div class="banner">
    <div class="logo">
      <div class="clock-container">
        <div class="clock-inside">
          <div class="minutes-logo"></div>
          <div class="hours-logo"></div>
        </div>
      </div>
    </div>
    <div class="page-title">Check clock</div>
  </div>
  <div class="navigation-home">
    <%= link_to "Admin Dashboard", "/admins/sign_in" %>
  </div>
</nav>
<main class="home-main">
  <div class="col-left">
    <div class="date">
      <p id="date">o</p>
    </div>
    <div class="clock-container">
      <div class="clock-inside">
        <div class="minutes"></div>
        <div class="hours"></div>
      </div>
    </div>
    <div class="hour">
      <p id="hour">00:00:00</p>
    </div>
  </div>
  <div class="col-right">
    <div class="branch-container">
      <p>Select your branch office: </p>
      <select id="selectBranch">
        <% @branches.each do |branch|%>
        <option value=<%= branch.id %>><%= branch.name %></option>
        <%end%>
      </select>
    </div>
    <div class="check-container">
      <p>Check your time: </p>
      <input type="password" id="secretCode" placeholder="Please enter your secret code">
      <div class="button-container">
        <button class="button-success" id="btn-checkIn">Check In</button>
        <button class="button-danger" id="btn-checkOut">Check Out</button>
      </div>
    </div>
  </div>
</main>

<%= javascript_pack_tag 'homepage' %>
<%= javascript_pack_tag 'analogic' %>
<%= javascript_pack_tag 'checkIn' %>
<%= javascript_pack_tag 'checkOut' %>
